    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Muntean_Alexia_laborator7"
    Shell.FlyoutBehavior="Disabled"
    Title="Muntean_Alexia_laborator7">

    <TabBar>
        <ShellContent
             Title="Welcome"
